<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.syaiful.moviecatalogue.fragment.MovieFragment"
        android:label="@string/tab_movie_title"
        tools:layout="@layout/fragment_movie"
        />

    <fragment
        android:id="@+id/navigation_tv"
        android:name="com.syaiful.moviecatalogue.fragment.TvFragment"
        android:label="@string/tab_tv_title"
        tools:layout="@layout/fragment_movie"
        />

    <fragment
        android:id="@+id/navigation_fav_container"
        android:name="com.syaiful.moviecatalogue.fragment.FavContainerFragment"
        android:label="@string/title_fav"
        tools:layout="@layout/fragment_fav_container"/>

